<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F9"
    tools:context=".MessageActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/shadow_test"
        android:elevation="2dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_chevron_left_24"
            app:tint="@color/dark_blue"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/user_image"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thebordev"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="online"
                android:gravity="right"
                android:fontFamily="@font/roboto"
                android:textColor="#c9c9c9"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:elevation="5dp"
            android:background="@drawable/edit_text_message"
            android:hint="Enter Message"
            android:layout_toLeftOf="@+id/photoBtn"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/roboto"
            android:paddingLeft="20dp"
            android:textColorHint="#646464"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoBtn"
            android:layout_width="40dp"
            android:src="@drawable/ic_baseline_send_24"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:tint="#646464" />
    </RelativeLayout>

</RelativeLayout>